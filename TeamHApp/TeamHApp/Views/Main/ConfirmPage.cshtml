
@model TeamHApp.Models.LostListlModel
<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="../style.css">
    <style>

        .form_textarea {
            font-size: 1rem;
            color: #495057;
            background-color: #ffffff;
            border: 1px solid #ced4da;
            border-radius: 5px;
            box-sizing: border-box;
            padding: 10px;
            margin-top: 5px;
            margin-right: 59.7%;
            float: right;
            width: 40%;
            margin-bottom: 5%;
        }

        .datetime {
            width: 45%;
        }

        .lostList2 {
            width: 40%;
            margin: auto;
            height: 40%;
            background-color: #f5f6f7;
            padding-bottom: 10%;
            box-shadow: 0 0 15px -6px #00000073;
        }

        .bgc2 {
            width: 100%;
            height: 100%;
            background-color: rgb(95, 93, 93);
        }

        .regist {
            width: 100%;
            height: 15%;
            background-color:  rgb(95, 93, 93);
            margin-top: 5%;
        }

    </style>
</head>

<body>
    @{
        <div class="bgc2">
            <div class="head">
                <h2>落し物管理者画面</h2>
            </div>


            <div class="lostList2">
                <div class="form">
                    <div class="form_title">登録完了</div>
                    <div class="form_content">
                        <form>

                            <div class="form_list">

                                @{


                                    <label>落し物分類：@ViewData["lost_type"]</label>

                                    <br>

                                    <br>

                                        string img_path = "/image/" + ViewData["up_file_name"];
                                        <label> 写真：</label><img src="@img_path"/><br><br>

                                        <label>発見場所：</label><br>@ViewData[" foundPlace"]<br>
                                        <label>特徴：</label><br>@ViewData[" feature"]<br>
                                    
                                }
                            </div>

                        </form>
                    </div>
                </div>
            </div>

            <div class="regist">
                <a href="Top"><button class="btn1">戻る</button></a>
            </div>

        </div>
    }
</body>

</html>